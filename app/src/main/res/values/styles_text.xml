<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextTitle.List">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSub">
        <item name="android:textColor">@color/text_black_sub</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>


    <style name="TextPlace">
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextPlace.Title">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextPlace.Sub">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextHint">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextButton" parent="Base.TextAppearance.AppCompat.Widget.Button">

    </style>
</resources>